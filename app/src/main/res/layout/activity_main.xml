<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/iv_quizzler"
        android:layout_width="@dimen/width_iv_quizzler"
        android:layout_height="@dimen/height_iv_quizzler"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_challenge"
        android:src="@drawable/quizzler"/>

    <ImageView
        android:id="@+id/iv_challenge"
        android:layout_width="@dimen/width_iv_challenge"
        android:layout_height="@dimen/height_iv_challenge"
        android:src="@drawable/challenge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>